@model NotesService.Models.Note
@{
    ViewBag.Title = "Удаление заметки";
}

<div>
    <dl class="dl-horizontal">
        <dt>Заголовок</dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>Текст заметки</dt>
        <dd>
            @Html.DisplayFor(model => model.Content)
        </dd>
    </dl>

    <div>
        <form asp-controller="Note" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>
