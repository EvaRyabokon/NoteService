@model IEnumerable<NotesService.Models.Note>
@{
    ViewData["Title"] = "Список заметок";
}
<!DOCTYPE html>

<body>
    <h3>Список заметок</h3>
    <a asp-action="Create">Добавить заметку</a>

    <form asp-controller="Note" asp-action="List">
        <p>
            Title: <input type="text" name="SearchString">
            <input type="submit" value="Поиск" />
        </p>
    </form>

    <table>
        <tr>
            <td></td>
        </tr>
        @foreach (var note in Model)
        {
            <tr>
                @if (string.IsNullOrEmpty(note.Title))
                {
                    <td><a asp-action="Details" asp-controller="Note" asp-route-id="@note.Id">@note.Content</a></td>
                }
                else
                {
                    <td><a asp-action="Details" asp-controller="Note" asp-route-id="@note.Id">@note.Title</a></td>
                }
                <td>
                    <a asp-action="Edit" asp-controller="Note" asp-route-id="@note.Id">Изменить</a> |
                    <a asp-action="Delete" asp-controller="Note" asp-route-id="@note.Id">Удалить</a>
                </td>
            </tr>
        }
    </table>
</body>
